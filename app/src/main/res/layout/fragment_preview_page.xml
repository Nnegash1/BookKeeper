<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#09A8FF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="@string/Invoice"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/view2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="12dp"
                app:cardCornerRadius="40dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/ic_invoice_logo" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/from"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/from" />

        <TextView
            android:id="@+id/business_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/business_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/business_email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_name"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/name_gmail_com"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_email"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/street_address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/state_country"
            android:textSize="16sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/state"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/phone"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/for_client"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/_for" />

        <TextView
            android:id="@+id/client_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/client_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/client_email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/name_gmail_com"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/client_address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_email"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/street_address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/client_state"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/state_country"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/client_phone_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/state"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/phone"
            android:textSize="16sp" />

        <View
            android:id="@+id/guideline_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/client_phone_number"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#D3CFCF" />

        <TextView
            android:id="@+id/invoice_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guideline_1"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/invoice_number"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/issue_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invoice_number"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/issue_date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/due_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issue_date"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/due_date"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/guideline_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/due_date"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#388E3C"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/description_"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="150dp"
                android:text="@string/qty"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:text="@string/unit_price"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guideline_2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />

        <View
            android:id="@+id/guideline_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/recycler_view"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#D3CFCF" />

        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guideline_3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="5dp"
            android:text="@string/subtotal" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guideline_3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/_0_00" />


        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtotal"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="5dp"
            android:text="@string/discount" />

        <TextView
            android:id="@+id/discount_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/_0_00" />

        <View
            android:id="@+id/guideline_4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/discount_amount"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#D3CFCF" />

        <TextView
            android:id="@+id/balance_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guideline_4"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="55dp"
            android:text="@string/balance_due" />

        <TextView
            android:id="@+id/balance_due_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guideline_4"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="55dp"
            android:text="@string/_0_00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_due_amount"
            android:text="
TERMS and CONDITIONS\n
PAYMENT: \n
SHIPMENT:\n
DESTINATION:\n
PORT OF LOADING: INSURANCE: VALIDITY:\n
BANKER: \n
ACCOUNT NO:\n
IBAN NO:\n
SWIFT CODE: \n
BANK ROUTING CODE: \n
CAD/LC: \n
BY SEA, ETHIOPIAN SHIPPING LINES: \n
VIA DIBOUTI COMMET/MOJO DRY PORT/ GELAN ANY UAE PORT:\n
COVERED BY BUYER: \n
30 DAYS:\n
MASHREQ BANK,MURAQABAT BRANCH NAJMAT AL RAAD TYRES TRADING LLC ,019100855652\n
AE590330000019100855652\n
BOMLAEAD\n
203320101\n
DUBAI U.A.E"/>
    </RelativeLayout>
</ScrollView>
